<!DOCTYPE html>
<html ng-app="webGroup">
<head>
    <meta charset="utf-8" />
    <title>Web group chat</title>

    <link href="css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="css/content.css" rel="stylesheet" type="text/css" />
    <link href="css/ngDialog.min.css" rel="stylesheet" type="text/css" />
    <link href="css/ngDialog-theme-default.min.css" rel="stylesheet" type="text/css" />

    <script src="scripts/jquery.min.js" type="text/javascript"> </script>
    <script src="scripts/bootstrap.min.js" type="text/javascript"> </script>
    <script src="scripts/angular.min.js" type="text/javascript"> </script>
    <script src="scripts/angular-route.min.js" type="text/javascript"> </script>
    <script src="scripts/angular-websocket.min.js" type="text/javascript"> </script>
    <script src="scripts/ngDialog.min.js" type="text/javascript"> </script>
    <script src="scripts/angular-animate.min.js" type="text/javascript"> </script>
    <script src="scripts/angular-translate.min.js" type="text/javascript"></script>
    <script src="scripts/angular-translate-loader-partial.min.js" type="text/javascript"></script>
    <script src="scripts/angular-sanitize.min.js" type="text/javascript"></script>

    <script src="app/app.js" type="text/javascript"> </script>
</head>
<body>
    <div class="spinner" ng-if="connection.count > 0">
        <i class="fa fa-spinner fa-5x fa-pulse"></i>
    </div>

    <site-header></site-header>

    <left-menu></left-menu>

    <div class="main-body" ng-class="{'main-body': areas.leftMenu !== 'none',
         'main-body-full' : areas.leftMenu === 'none'}">
        <div class="site-view" ng-view>
        </div>
    </div>

    <site-footer></site-footer>
</body>
</html>